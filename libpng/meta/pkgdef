[libpng]
pkgname="${pkgprefix}${topdir}"
name="$topdir - libpng is the official PNG reference library."
pkgcat="system"
pkgvendor="https://download.gnome.org/sources/"
pkgdesc="libpng is the official PNG reference library. It supports almost all PNG features, is extensible, and has been extensively tested for over 30 years."
pkgver="$pkgver"
files(-,root,bin)
default_docs
